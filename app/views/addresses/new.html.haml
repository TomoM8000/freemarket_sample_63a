.addresses-new
  %header.addresses-new__header
    = render 'layouts/header'
  %main.addresses-new__main
    .addresses-new-container
      .addresses-new-container__left
        = render 'layouts/user-nav'
      .addresses-new-container__right
        -# 登録フォーム
        .addresses-new-info
          .addresses-new-info__title
            発送元・お届け先住所登録
          .addresses-new-info__field
            = form_with(model:[current_user, @address], local: true, id: 'new_address') do |f|
              - if @address.errors.any?
                .address-new-info__errors
                  %h2= "#{@address.errors.full_messages.count}件のエラーが発生しました。"
                  %ul
                    - @address.errors.full_messages.each do |message|
                      %li= message
              .addresses-new-info__groups
                .addresses-new-info__group
                  .addresses-new-info__group--content
                    = f.label :"お名前(全角)"
                    %span.form-require 必須
                    %br/
                    = f.text_field :first_name, class: "addresses-new-info__textbox", placeholder: "例）山田"
                  .addresses-new-info__group--content
                    = f.text_field :last_name, class: "addresses-new-info__textbox",placeholder: "例）太郎"
                .addresses-new-info__group
                  .addresses-new-info__group--content
                    = f.label :"お名前カナ(全角)"
                    %span.form-require 必須
                    %br/
                    = f.text_field :first_name_kana, class: "addresses-new-info__textbox", placeholder: "例）ヤマダ"
                  .addresses-new-info__group--content
                    = f.text_field :last_name_kana, class: "addresses-new-info__textbox", placeholder: "例）タロウ"
                .addresses-new-info__group
                  .addresses-new-info__group--content
                    = f.label :"郵便番号"
                    %span.form-require 必須
                    %br/
                    = f.text_field :postal_number, class: "addresses-new-info__textbox",placeholder: "例）1234567"
                .addresses-new-info__group
                  .addresses-new-info__group--content
                    = f.label :"都道府県"
                    %span.form-require 必須
                    %br/
                    = f.collection_select :area_id, Area.all, :id, :name
                .addresses-new-info__group
                  .addresses-new-info__group--content
                    = f.label :"市区町村"
                    %span.form-require 必須
                    %br/
                    = f.text_field :city, class: "addresses-new-info__textbox", placeholder: "例）横浜市緑区"
                .addresses-new-info__group
                  .addresses-new-info__group--content
                    = f.label :"番地"
                    %span.form-require 必須
                    %br/
                    = f.text_field :number, class: "addresses-new-info__textbox", placeholder: "例）青山1−1−1"
                .addresses-new-info__group
                  .addresses-new-info__group--content
                    = f.label :"建物名"
                    %span.common-field__tag--any 任意
                    %br/
                    = f.text_field :building, class: "addresses-new-info__textbox", placeholder: "例）柳ビル101"
                .addresses-new-info__group
                  .addresses-new-info__group--content
                    = f.label :"電話番号"
                    %span.common-field__tag--any 任意
                    %br/
                    = f.text_field :telephone_number, class: "addresses-new-info__textbox", placeholder: "例）09012345678"
                .addresses-new-info__submit
                  = f.submit "登録する",class:"addresses-new-info__submit-btn" 

  %footer.adresses-new__footer
    = render 'layouts/footer'
    = render 'layouts/purchase-btn'