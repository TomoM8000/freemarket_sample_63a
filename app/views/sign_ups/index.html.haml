.sign-ups-index
  %header.sign-ups-index__header
    = render "devise/header-image"
  %main.sign-ups-index__main
    %section.sign-ups-index-container
      .sign-ups-index-container__head
        %h2.sign-ups-index-container__head--text 新規会員登録
      .sign-ups-index-container__contents
        %content.sign-ups-index-content
          %a.sign-ups-index-content__btn--email{href:"#{new_user_registration_path}"}
            %i.sign-ups-index-content__icon
              = icon('far', 'envelope')
            %span.sign-ups-index-content__text
              メールアドレスで登録する
          %a.sign-ups-index-content__btn--facebook{href:"#"}
            %i.sign-ups-index-content__icon
              = icon('fab', 'facebook-square')
            %span.sign-ups-index-content__text
              Facebookで登録する
          %a.sign-ups-index-content__btn--google{href:"#"}
            %i.sign-ups-index-content__icon--google
              = icon('fab', 'google')
            %span.sign-ups-index-content__text--google
              googleで登録する
  %footer.sign-ups-index__footer
    = render "devise/navigation"