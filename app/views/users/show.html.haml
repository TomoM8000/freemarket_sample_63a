.user-show
  %header.user-show__header
    = render 'layouts/header'
  %main.user-show__main
    .user-show-container
      .user-show-container__left
        = render 'layouts/user-side-bar'
      .user-show-container__right
        %section.user-show-info
          = link_to "#" , class:"user-show-info__minute" do
            %figure.user-show-info__image
              = image_tag 'member_photo_noimage_thumb.png'
            %h2.user-show-info__name
              name
            .user-show-info__exhibition
              %div.user-show-info__exhibition--assessment
                評価
              %div.user-show-info__exhibition--counts
                出品数
        %section.user-show-tabs
          .user-show-tabs__primary
            %ul.user-show-tabs__tab
              %li.user-show-tabs__notify
                %h3
                  = link_to "お知らせ" ,"#",class:"user-show-tabs__notify--text"
              %li.user-show-tabs__todo
                %h3
                  = link_to "やることリスト" ,"#",class:"user-show-tabs__todo--text"
            %ul.user-show-tabs__content
              %li.user-show-tabs__btn
                = link_to  "#", class:"user-show-tabs__btn--link" do
                  %figure.user-show-tabs__btn--image
                    = image_tag('mercari_profile.png')
                  .user-show-tabs__text
                    %p.user-show-tabs__text--notify
                      [test]お知らせ内容
                    %time.user-show-tabs__icon--clock
                      = icon('far', 'clock')
                      %span.user-show-tabs__text--limit
                        1日前
                  %i.user-show-tabs__icon
                    = icon('fa', 'chevron-right')
              %li.user-show-tabs__btn
